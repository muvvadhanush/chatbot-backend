# Server Configuration
PORT=5001
NODE_ENV=development # or production

# Database (PostgreSQL)
DB_HOST=localhost
DB_USER=postgres
DB_PASS=password
DB_NAME=chatbot_db
DB_PORT=5432

# Redis (Caching & Queues)
REDIS_ENABLED=true
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# AI Configuration
# Options: 'openai' or 'groq'
AI_PROVIDER=groq

# API Keys
OPENAI_API_KEY=sk-proj-...
GROQ_API_KEY=gsk_...

# Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here

# Feature Flags
ENABLE_AUTO_EXTRACT=true
